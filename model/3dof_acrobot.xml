<mujoco model="acrobot3">
  <!-- angles in radians; gravity along -z so motion is in the xâ€“z plane -->
  <compiler angle="radian"/>
  <option gravity="0 0 -9.81" timestep="0.0001" integrator="RK4"/>

  <default>
    <!-- Don't limit revolute joints unless you really need to -->
    <joint type="hinge" limited="false" damping="0.01" armature="0.002"/>
    <geom type="capsule" size="0.03" rgba="0.7 0.7 0.75 1" density="800" />
    <motor ctrllimited="true" ctrlrange="-12 12" gear="1"/>
  </default>

  <worldbody>
    <!-- Fixed base -->
    <body name="base" pos="0 0 0.05">
      <!-- Link 1 (length 0.4 along +z) -->
      <body name="link1" pos="0 0 0">
        <joint name="j1" axis="0 1 0"/>  <!-- rotate about +y -->
        <!-- Inertial at center of the rod (approx for a solid cylinder) -->
        <inertial pos="0 0 0.2" mass="1.0" diaginertia="0.01356 0.01356 0.00045"/>
        <geom fromto="0 0 0  0 0 0.4"/>

        <!-- Link 2 attaches at end of Link 1 -->
        <body name="link2" pos="0 0 0.4">
          <joint name="j2" axis="0 1 0"/>
          <inertial pos="0 0 0.2" mass="1.0" diaginertia="0.01356 0.01356 0.00045"/>
          <geom fromto="0 0 0  0 0 0.4"/>

          <!-- Link 3 attaches at end of Link 2 -->
          <body name="link3" pos="0 0 0.4">
            <joint name="j3" axis="0 1 0"/>
            <inertial pos="0 0 0.2" mass="1.0" diaginertia="0.01356 0.01356 0.00045"/>
            <geom fromto="0 0 0  0 0 0.4"/>
            <!-- a site at the tip just for visualization/debugging -->
            <site name="tip" pos="0 0 0.4" size="0.01" rgba="0.9 0.3 0.3 1"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <!-- Only the last joint is actuated: underactuated 3-link acrobot -->
  <actuator>
    <motor name="u3" joint="j3"/>
    <!-- If you want to actuate j2 as well, add: <motor name="u2" joint="j2"/> -->
  </actuator>

  <!-- Sensors are handy while debugging -->
  <sensor>
    <jointpos joint="j1"/>
    <jointvel joint="j1"/>
    <jointpos joint="j2"/>
    <jointvel joint="j2"/>
    <jointpos joint="j3"/>
    <jointvel joint="j3"/>
  </sensor>

  <!-- Start slightly perturbed so it doesn't sit perfectly vertical -->
  <keyframe>
    <key name="init" qpos="3.00 0.10 -0.10" qvel="0 0 0"/>
  </keyframe>
</mujoco>
